<!doctype html>
<html>
<head>
    <title>Signup - Apollo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include ./partials/resources %>
</head>
<body class="account-page">
    <% include ./partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-1 col-md-5">
                <h1 class="account-page-header"><span class="fa fa-sign-in"></span> Signup</h1>

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- Sign up FORM -->
                <form class="account-form" action="/signup" method="post" id="signup-form">
                    <span class="payment-errors"></span>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>

                    <button type="submit" class="button button_valencia button_sm">Signup</button>
                </form>
                <hr>
                <div class="account-form-bottom">
                    <p>Already have an account? <a href="/login">Login</a></p>
                </div<
            </div>
        </div>
    </div>
    <% include ./partials/footer %>
</body>
</html>
