<!doctype html>
<html>
<head>
    <title>Login - Apollo QA</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include ./partials/resources %>
</head>
<body class="page-full-bg bg-top login-page">
    <% include ./partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-1 col-md-5">
                <h1 class="login-page-header"><span class="fa fa-sign-in"></span> Login</h1>

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form class="login-form" action="/login" method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" data-tar="email" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" data-tar="password" name="password">
                    </div>
                    <button type="submit" class="button button_valencia button_sm" data-tar="login-submit">Login</button>
                </form>
                <hr>
                <div class="login-form-bottom">
                    <p>New here? <a href="/signup">Signup</a></p>
                    <p>Been a while? <a href="/reset-password">Reset password</a></p>
                </div<
            </div>
        </div>
    </div>
    <% include ./partials/footer %>
</body>
</html>
