<!doctype html>
<html>
<head>
    <title>Login - QA Automation Bot</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include ./partials/resources %>
</head>
<body>
    <% include ./partials/header %>
    <div class="page-container">
        <h1 class="text-center"><span class="fa fa-sign-in"></span> Login</h1>
        <div class="narrow-form col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-md-4 col-offset-3 col-lg-4 col-lg-offset-4">
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" data-tar="email" name="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" data-tar="password" name="password">
                </div>
                <button type="submit" class="btn btn-primary" data-tar="login-submit">Login</button>
            </form>
            <hr>
            <p>New here? <a href="/signup">Signup</a></p>
            <p>Been a while? <a href="/reset-password">Reset password</a></p>
        </div>
    </div>
    <% include ./partials/footer %>
</body>
</html>
