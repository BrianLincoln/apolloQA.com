<!doctype html>
<html>
<head>
    <title>Signup - QA Automation Bot</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include ./partials/resources %>
</head>
<body>
    <% include ./partials/header %>
    <div class="page-container">
        <h1 class="text-center"><span class="fa fa-sign-in"></span> Subscription</h1>
        <div class="narrow-form col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-md-4 col-offset-3 col-lg-4 col-lg-offset-4">

            <!-- LOGIN FORM -->
            <form action="/subscription" method="post" id="payment-form">
                <h2>Free for 7 days</h2>
                <h4>Then $25 /month</h4>
                <span class="payment-errors"></span>

                <div class="row">
                    <div class="col-xs-12 col-lg-9">
                        <div class="form-group">
                            <label>Card Number</label>
                            <input type="text" class="form-control" data-stripe="number">
                        </div>
                    </div>
                    <div class="col-xs-12 col-lg-3">
                        <div class="form-group">
                            <label>CVC</label>
                            <input type="text" class="form-control" data-stripe="cvc">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12 col-lg-6">
                        <div class="form-group">
                            <label>Expiration (MM - YY)</label>
                            <div class="payment-expiration">
                                <input type="text" class="form-control" data-stripe="exp_month">
                                <span class="payment-form-expiration-dash">&mdash;</span>
                                <input type="text" class="form-control" data-stripe="exp_year">
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-lg-6">
                        <div class="form-group">
                            <label>Zip</label>
                            <input type="text" class="form-control" data-stripe="address_zip">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Signup</button>
            </form>
        </div>
    </div>



    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
    <script type="text/javascript">
      Stripe.setPublishableKey('pk_test_btvhX4BHfAz6tiSSfrekXmJq');

      $(function() {
        var $form = $('#payment-form');
        $form.submit(function(event) {
          // Disable the submit button to prevent repeated clicks:
          $form.find('.submit').prop('disabled', true);

          // Request a token from Stripe:
          Stripe.card.createToken($form, stripeResponseHandler);

          // Prevent the form from being submitted:
          return false;
        });
      });

      function stripeResponseHandler(status, response) {
        // Grab the form:
        var $form = $('#payment-form');

        if (response.error) { // Problem!

          // Show the errors on the form:
          $form.find('.payment-errors').text(response.error.message);
          $form.find('.submit').prop('disabled', false); // Re-enable submission

        } else { // Token was created!

          // Get the token ID:
          var token = response.id;

          // Insert the token ID into the form so it gets submitted to the server:
          $form.append($('<input type="hidden" name="stripeToken">').val(token));

          // Submit the form:
          $form.get(0).submit();
        }
      };
    </script>
</body>
</html>
