<!doctype html>
<html>
<head>
    <title>Reset Password - Apollo QA</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include ./partials/resources %>
</head>
<body>
    <% include ./partials/header %>
    <div class="page-container">
        <h1 class="text-center"><span class="fa fa-sign-in"></span> Forgot your password?</h1>
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
            <form action="/reset-password" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" required class="form-control" data-tar="reset-pw" name="email">
                </div>
                <button type="submit" class="btn btn-primary" data-tar="reset-pw-submit">Reset</button>
            </form>
            <hr>
            <p>Need an account? <a href="/signup">Signup</a></p>
            <p>Or go <a href="/">home</a>.</p>
        </div>
    </div>
    <% include ./partials/footer %>
</body>
</html>
