


<!doctype html>
<html>
<head>
    <title>Reset Password - Apollo QA</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include ./partials/resources %>
</head>
<body>
    <% include ./partials/header %>
    <div class="page-container">
        <h1 class="text-center"><span class="fa fa-sign-in"></span> Enter your new password</h1>
        <div class="narrow-form col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-md-4 col-offset-3 col-lg-2 col-lg-offset-5">
            <form action="/reset-password-submit" method="post">
                <div class="form-group">
                    <input type="password" class="form-control" name="password">
                </div>
                <input type=hidden name=guid value="<%= guid %>">
                <button type="submit" class="btn btn-primary">Signup</button>
            </form>
        </div>
    </div>
    <% include ./partials/footer %>
</body>
</html>
